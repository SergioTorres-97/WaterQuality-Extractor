# ============================================
# CONFIGURACIÓN DEL PROYECTO
# ============================================

# ===== AZURE STORAGE =====
# Obtener en: Azure Portal → Storage Account → Access Keys → Connection String
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=TU_STORAGE_ACCOUNT;AccountKey=TU_KEY_AQUI;EndpointSuffix=core.windows.net

# Nombre del contenedor donde se guardan los PDFs
BLOB_CONTAINER_NAME=pdfs-agua

# ===== AZURE DOCUMENT INTELLIGENCE =====
# Obtener en: Azure Portal → Document Intelligence → Keys and Endpoint
DOCUMENT_INTELLIGENCE_ENDPOINT=https://TU-RECURSO.cognitiveservices.azure.com/

# Key 1 o Key 2
DOCUMENT_INTELLIGENCE_KEY=TU_KEY_DE_32_CARACTERES_AQUI

# ===== OPENAI =====
# Obtener en: https://platform.openai.com/api-keys
# Empieza con: sk-proj-...
OPENAI_API_KEY=sk-proj-TU_API_KEY_AQUI_CON_48_CARACTERES

# ===== COSMOS DB =====
# Obtener en: Azure Portal → Cosmos DB Account → Keys

# URI del endpoint
COSMOS_ENDPOINT=https://TU-COSMOS-ACCOUNT.documents.azure.com:443/

# Primary Key (string largo base64)
COSMOS_KEY=TU_PRIMARY_KEY_BASE64_AQUI_MUY_LARGO==

# Nombre de la base de datos (se crea automáticamente si no existe)
COSMOS_DATABASE_NAME=agua_db

# Nombre del contenedor (se crea automáticamente si no existe)
COSMOS_CONTAINER_NAME=analisis